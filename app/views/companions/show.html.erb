<p style="color: green"><%= notice %></p>

<%= render @companion %>

<div>
  <%= link_to "Edit this companion", edit_companion_path(@companion) %> |
  <%= link_to "Back to companions", companions_path %>

  <%= button_to "Destroy this companion", @companion, method: :delete %>
</div>

<div>
  <h2>Posts </h2>

  <%= form_with(model: [@companion, @companion.posts.build]) do |form| %>
      <%= form.text_area :body, placeholder: "Your post here" %>
      <br>
      <%= form.submit %>
  <% end %>

</div>

<div>
  <%= render 'companions/allposts'%>
</div>